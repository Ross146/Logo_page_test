@import "nib";
@import "/import/_var.styl";
@import "/import/owlcarousel.styl";
body
  font-size: 13px
  min-width: 340px
  position: relative
  line-height: 25 * $px_em
  overflow-x: hidden
  color: $light-black-color
  font-family: OpenSansRegular, sans-serif
  font-weight: normal

h1
  font-size: 48* $px_em;
h2
  font-size: 36* $px_em
h3
  font-size: 33* $px_em
  
h5
  font-size: 15 * $px_em

header
  min-height 832px
  position relative
  .header-menu
    position relative
    background-color: rgba(0,0,0,.5)
    z-index 2
    min-height 100px
    color white
  .logo-wrapper
    float:left
    display: inline
    font-size: 50 * $px_em
    line-height 1.6em
    font-family: Lobster, sans-serif;
    span
      color $blue-color
  menu
    float right
    width 755px
    list-style none
    margin: 0
    padding: 0
    li
      display inline-block
      margin: 0 17px
      a, a:hover, a:visited, a:focus
        display block
        padding 35px 0 37px
        text-decoration: none
        color #fff
        text-transform: uppercase
        border-top 2px solid transparent
        transition all .25s ease
      a:hover
        color $blue-color
      &.active a
        text-decoration none
        color $blue-color
        border-color $blue-color
  .header-carousel
    color #fff
    height 832px
    background-color: #2c2b2c;
    position absolute
    z-index 1
    top 0
    width 100%
    background-image: url(../img/header-bg.jpg);
    background-size cover
    .item
      margin-top 300px
      height 532px
      h1, p
        font-family: LatoLight, sans-serif;
        b
          font-family: LatoBold, sans-serif;
      h1
        line-height 1
      p
        font-size: 18*$px_em
        margin-bottom 50px
      a, a:hover, a:visited, a:focus
        text-align center
        color #fff
        font-size: 15 *$px_em
        display inline-block
        text-transform uppercase
        text-decoration none
        font-family: LatoBold, sans-serif;
        width 200px
        margin-right 30px
        vertical-align top
      .dwn-btn
        padding 17px 0
        border 3px solid #fff
        border-radius 6px
      .lrn-btn
        background-color: $blue-color
        padding 19px 0 18px
        border-radius 6px
        position relative
        &:after
          z-index -1
          content: ''
          position absolute
          display inline-block
          top 3px
          left 0
          width: 100%
          height 100%
          border-radius 6px
          background-color: #277697
      .support
        margin-top 45px
        p
          font-family: LatoLight, sans-serif
          font-size: 18 *$px_em;
          display inline-block
          vertical-align middle
          margin-right: 15px
        i
          display inline-block
          width 50px
          height 50px
          border-radius 10em
          background-color: #1e1d1e;
          margin-right 15px
          background-image: url(../img/ios-android.png);
          background-repeat: no-repeat
          background-position: 15px center;
          cursor pointer
          &:last-child
            background-position: -53px center;
    .item-1
      background-image: url(../img/slide1.png)
      background-repeat: no-repeat

  .owl-controls
    .owl-dots
      position absolute
      bottom 45px
      left 50%
      transform translateX(-50%)
      .owl-dot
        width: 12px
        height: 12px
        background-color: transparent
        display inline-block
        border-radius 10em
        border 2px solid #fbfbfb
        margin:0 5px
        vertical-align middle
        &.active
          background-color: $blue-color
          border-color: $blue-color
          width 14px
          height 14px
    .owl-nav
      div
        height 50px
        width 50px
        background-color: $blue-color
        background-image: url(../img/arrows-slider.png)
        background-repeat: no-repeat
        background-position 21px 18px
        display inline-block
        position absolute
        top 39%
        left 70px
        opacity .4
        transition all .25s ease
        border-radius 10em
        &:hover
          opacity 1
        &:first-child:hover
          background-position: -150px 18px;
        &:last-child:hover
          background-position: -84px 18px;
        &:last-child
          right 70px
          left auto
          background-position: -29px 18px;

  .toggle-mnu
    position absolute
    top 10px
    right 20px
    display: block
    width: 28px
    height: 28px
    padding-top: 20px
    z-index 10
  .toggle-mnu span:after,
  .toggle-mnu span:before
    content: ""
    position: absolute
    left: 0
    top: -9px

  .toggle-mnu span:after
    top: 9px

  .toggle-mnu span
    position: relative
    display: block

  .toggle-mnu span,
  .toggle-mnu span:after,
  .toggle-mnu span:before
    width: 100%
    height: 2px
    background-color: white
    border-radius: 2px
    transition: all 0.3s

  .toggle-mnu.on span
    background-color: transparent

  .toggle-mnu.on span:before
    transform: rotate(45deg) translate(5px, 5px)

  .toggle-mnu.on span:after
    transform: rotate(-45deg) translate(7px, -8px)




