@media only screen and (max-width : 1200px)
  header
    .header-carousel
      .item
        margin-top 200px
        height 632px
@media only screen and (max-width : 992px)
  header
    menu
      width 628px
      li
        margin 0 9px
  .features
    .item
      padding 0
@media only screen and (max-width : 768px)
  header
    .header-menu
      min-height 70px
    .logo-wrapper
      line-height 1.2
    menu
      float none
      display none
      background-color: $blue-color;
      position absolute
      top 0
      left 0
      width 100%
      height 832px

      li
        display block
        text-align center
        margin 0
        a ,a:hover, a:focus, a:visited
          color #fff
          padding 20px 0
        a:hover
          background-color: blue

      li.active a
        text-decoration underline
    .header-carousel
      text-align center
      .item
        margin-top 70px
        height 762px
        background-position: -170px 130px;
        a , a:hover , a:focus, a:visited
          margin-right 0
          margin-bottom 25px
        .support
          margin-top 0px
    .owl-controls
      .owl-nav
        display none
  #accounts-list
    ul
      li
        h3
          margin-top 50px
          margin-bottom 50px
          font-size: 25 *$px_em
        img
          margin: 0 25px 0px 25px
@media only screen and (max-width : 480px)
  header
    .header-carousel
      .item
        h1
          font-size: 38px
  #accounts-list
    ul
      li
        img
          width 80px
          height 80px
          margin: 0 25px 0px 25px
        h3
          margin-top 25px
    input[type="radio"]
      margin-top 25px
