@import "nib";
@import "/import/_var.styl";

*::-webkit-input-placeholder
  color: #000
  opacity: 1

*:-moz-placeholder
  color: #000
  opacity: 1

*::-moz-placeholder
  color: #000
  opacity: 1

*:-ms-input-placeholder
  color: #000
  opacity: 1

body input:focus:required:invalid,
body textarea:focus:required:invalid
  color: #000
body input:required:valid,
body textarea:required:valid
  color: #000

//Custom Styles Here
.features
  min-height 580px
  background-color: #f9f9f9
  border-top 4px solid $blue-color
  border-bottom 1px solid #e7e7e7
  padding 15px 0
  .text-wrap
    text-align center
    color #414042
    padding-bottom 20px
    h2
      font-family: LatoBold, sans-serif;
      font-weight: 100;
      margin-bottom 0;
      line-height 1
    p
      font-family: LatoLight, sans-serif
      font-size 20 *$px_em

  .item
    text-align center
    padding 0 25px
    .img-wrap
      display inline-block
      background-color: $blue-color
      width 160px
      height 160px
      border-radius 10em
      border 4px solid #efefef
      background-repeat: no-repeat;
      background-position: center;
    h5
      font-family: LatoBold, sans-serif
    &.active
      h5
        color $blue-color
      .img-wrap
        background-color: #414042
    &.layout
      .img-wrap
        background-image: url(../img/features1.png)
    &.design
      .img-wrap
        background-image: url(../img/features2.png)
    &.purpose
      .img-wrap
        background-image: url(../img/features3.png)
    &.customize
      .img-wrap
        background-image: url(../img/features4.png)
    p
      font-family: LatoRegular, sans-serif

.accounts
  .text-wrap
    padding 15px 0
    @extend .features .text-wrap
    h2
      @extend .features .text-wrap h2
      margin-bottom 25px

#accounts-list
  ul
    margin: 0
    padding: 0
    list-style none
    font-family: LatoBold, sans-serif;
    li
      margin-bottom 40px
      clearfix()
      img
        display inline-block
        float left
        width 122px
        height 122px
        border-radius 10em
        margin: 0 40px 0px 40px
      h3
        margin 10px 0 15px 0
        color $blue-color
      p
        font-size: 20*$px_em
  input[type="radio"]
    margin-top 50px
    float: left
    -webkit-appearance: none
    width: 30px
    height: 30px
    border 2px solid #e5e5e5
    outline none
    border-radius 10em
    background-color: #fff

  input[type="radio"]:checked
    border 8px solid $blue-color
    position relative

  input[type="radio"]:checked:after
    display inline-block
    content: ''
    width 10px
    height 10px
    border-radius 10em
    background-color: $blue-color
    position absolute
    left  2px
    top 2px
        

//ALWAYS END
@import "/import/_media.styl";

